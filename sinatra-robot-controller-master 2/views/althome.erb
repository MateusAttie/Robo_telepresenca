    <script>
      ims = new Array(5);

      for(i=0;i<ims.length;i++) {
        ims[i] = new Image();
      }

      ims[0].src = "images/stillalt.png";
      ims[1].src = "images/frontalt.png";
      ims[2].src = "images/backalt.png";
      ims[3].src = "images/leftalt.png";
      ims[4].src = "images/rightalt.png";

      var down = false;

      function myFunction(event) {
        if(down) return;

        down = true;

        var x = event.which || event.keyCode;
        var xhttp = new XMLHttpRequest();

        xhttp.open("POST", "codehere"+x, true);
        xhttp.send();

        switch(x){
          case 38:
            document.myImage.src = ims[1].src;
            break;
          case 40:
            document.myImage.src = ims[2].src;
            break;
          case 37:
            document.myImage.src = ims[3].src;
            break;
          case 39:
            document.myImage.src = ims[4].src;
            break;
        }

      }

      function myOthrFunction(){

        down = false;
        var xhttp = new XMLHttpRequest();
        xhttp.open("POST", "stahp", true);
        xhttp.send();   
        document.myImage.src = ims[0].src;

      }
    </script>        
  </body>
</html>
